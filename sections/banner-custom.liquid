<section
  class="banner-custom"
  style="background-image: url({{ section.settings.background_image | image_url }});"
>
  <div class="banner-top">
    <div class="banner-logo">{{ section.settings.logo_text }}</div>

    <div class="banner-subtitle">
      {{ section.settings.subtitle }}
    </div>

    <a href="#" class="banner-button">
      {{ section.settings.button_text }} â†’
    </a>
  </div>
</section>

<style>
  .banner-custom {
    width: 100%;
    min-height: 80vh;
    background-size: cover;
    background-position: center;
    position: relative;
  }

  /* VERY TOP BAR */
  .banner-top {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;

    display: flex;
    align-items: center;
    justify-content: flex-start;

    padding: 20px 40px; /* inner spacing without pushing down */
    gap: 400px; /* DOUBLE spacing */

    color: #000000;
  }

  .banner-logo {
    font-size: 24px;
    font-weight: 700;
    letter-spacing: 2px;
    white-space: nowrap;
  }

  .banner-subtitle {
    font-size: 14px;
    opacity: 0.9;
    white-space: nowrap;
  }

  .banner-button {
    padding: 10px 24px;
    background-color: #ffffff;
    color: #000000;
    font-size: 14px;
    font-weight: 600;
    text-decoration: none;
    border: 1px solid #000000;
    transition: all 0.3s ease;
    white-space: nowrap;
  }

  .banner-button:hover {
    background-color: #000000;
    color: #ffffff;
  }
</style>


{% schema %}
{
  "name": "Banner Custom",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background image"
    },
    {
      "type": "text",
      "id": "logo_text",
      "label": "Logo Text",
      "default": "TISSO VISION"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Find ideal gift for your loved ones."
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Main heading",
      "default": "The Gift Guide"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Discover meaningful gifts crafted with care."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "SHOP NOW"
    },
    {
      "type": "text",
      "id": "bottom_text",
      "label": "Bottom Text",
      "default": "SUSTAINABLE, ETHICALLY MADE"
    }
  ]
}
{% endschema %} 









