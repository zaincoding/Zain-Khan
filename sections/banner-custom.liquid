<section class="banner-custom">
  <!-- TOP HORIZONTAL CONTENT -->
  <div class="banner-top">
    <div class="banner-logo">
      {{ section.settings.logo_text }}
    </div>

    <div class="banner-subtitle">
      {{ section.settings.subtitle }}
    </div>

    <a href="#" class="banner-button-gift">
      {{ section.settings.choose_gift }} â†’
    </a>
  </div>

  <!-- VERTICAL CONTENT -->
  <div class="banner-content">
    <h1 class="banner-heading">
      {{ section.settings.heading }}
    </h1>

    <p class="banner-description">
      {{ section.settings.description }}
    </p>

    <a href="#" class="banner-button">
      {{ section.settings.button_text }} â†’
    </a>

      <!-- BOTTOM TEXT -->
  <p class="banner-bottom-text">
    {{ section.settings.bottom_text }}
  </p>

  </div>
</section>

<style>
  .banner-custom {

    background-image: url({{ section.settings.background_image | image_url }});
    width: 100%;
    height: 100vh;
    min-height: 700px;
    max-height: 900px;
    background-size: cover;
    background-position: center top;
    background-repeat: no-repeat;

    display: flex;
    flex-direction: column;
    {% comment %} align-items: flex-start; {% endcomment %}
       justify-content: space-between; /* ðŸ”¥ key line */

  }

  /* TOP BAR */
  .banner-top {
    display: flex;
    align-items: center;

    padding: 8px 50px;
    color: #000000;
  }

  .banner-logo {
    font-size: 20px;
    font-weight: 600;
    letter-spacing: 0px;
    white-space: nowrap;
  }

  .banner-subtitle {
    margin-left: auto;
    margin-right: auto;
    font-size: 14px;
    opacity: 0.9;
    white-space: nowrap;
  }



  /* VERTICAL CONTENT */
  .banner-content {
    margin-left:0px;
    padding-left:60px;
    margin-top: 350px;
     padding-bottom: 60px;
    max-width: 550px;
    color: #000000;
  }

  .banner-heading {
    font-size: 62px;
    font-weight: 600;
    margin-bottom: 20px;
  }

  .banner-description {
    font-size: 16px;
    margin-bottom: 30px;
    line-height: 1.6;
  }

    /* BUTTONS */
  .banner-button-gift {
    display: inline-block;
    padding: 10px 46px;
    background-color:rgb(250, 234, 5);
    color: #000000;
    font-size: 14px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
    white-space: nowrap;
  }

    .banner-button-gift:hover {
    background-color: #000000;
    color: #ffffff;
  }
  
  .banner-button {
    display: inline-block;
    padding: 10px 46px;
    background-color:rgb(250, 234, 5);
    color: #000000;
    font-size: 14px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
    white-space: nowrap;
  }

  .banner-button:hover {
    background-color: #000000;
    color: #ffffff;
  }



  .banner-bottom-text {
  margin-top: 100px; /* between 400â€“500px as requested */
  font-size: 14px;
  font-weight: 600;
  margin-left: auto;
  letter-spacing: 2px;
  color: #000000;
  white-space: nowrap;
}


/* Tablet & Mobile Responsiveness */
@media (max-width: 1024px) {
  /* Tablet: adjust padding and content width */
  .banner-top {
    padding: 8px 30px;
    gap: 20px; /* reduce horizontal spacing */
  }

  .banner-content {
    padding-left: 40px;
    margin-top: 250px; /* push content slightly down */
    max-width: 450px;
  }

  .banner-heading {
    font-size: 48px; /* smaller for tablet */
  }

  .banner-description {
    font-size: 15px;
  }

  .banner-button, .banner-button-gift {
    padding: 8px 36px;
    font-size: 13px;
  }

  .banner-bottom-text {
    margin-top: 60px;
    font-size: 13px;
  }
}


@media (max-width: 768px) {

  /* Make banner content start from top */
  .banner-custom {
    justify-content: flex-start;
    text-align: center;
  }

  /* Hide buttons */
  .banner-button,
  .banner-button-gift,
  .banner-bottom-text {
    display: none;
  }

  /* Stack top section vertically and center */
  .banner-top {
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 30px 20px 10px 20px;
    gap: 10px;
  }

  /* Center banner content */
  .banner-content {
    margin-top: 0;
    padding: 10px 20px;
    max-width: 100%;
    text-align: center;
  }

  .banner-heading {
    font-size: 26px;
    margin-bottom: 10px;
  }

  .banner-description {
    font-size: 14px;
    line-height: 1.5;
  }
}






</style>


