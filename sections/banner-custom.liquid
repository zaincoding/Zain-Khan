<section
  class="banner-custom"
  style="background-image: url({{ section.settings.background_image | image_url }});"
>
  <!-- TOP HORIZONTAL CONTENT -->
  <div class="banner-top">
    <div class="banner-logo">
      {{ section.settings.logo_text }}
    </div>

    <div class="banner-subtitle">
      {{ section.settings.subtitle }}
    </div>

    <a href="#" class="banner-button">
      {{ section.settings.button_text }} â†’
    </a>
  </div>

  <!-- VERTICAL CONTENT -->
  <div class="banner-content">
    <h1 class="banner-heading">
      {{ section.settings.heading }}
    </h1>

    <p class="banner-description">
      {{ section.settings.description }}
    </p>

    <a href="#" class="banner-button banner-button-secondary">
      {{ section.settings.button_text }} â†’
    </a>

      <!-- BOTTOM TEXT -->
  <p class="banner-bottom-text">
    {{ section.settings.bottom_text }}
  </p>

  </div>
</section>

<style>
  .banner-custom {
    width: 100%;
    height: calc(100vh - var(--header-height, 0px));
    background-size: cover;
    background-position: center top;
    background-repeat: no-repeat;

    display: flex;
    flex-direction: column;
    {% comment %} align-items: flex-start; {% endcomment %}
       justify-content: space-between; /* ðŸ”¥ key line */

  }

  /* TOP BAR */
  .banner-top {
    display: flex;
    align-items: center;
    gap: 260px;

    padding: 40px 50px;
    color: #000000;
  }

  .banner-logo {
    font-size: 20px;
    font-weight: 700;
    letter-spacing: 0px;
    white-space: nowrap;
  }

  .banner-subtitle {
    font-size: 14px;
    opacity: 0.9;
    white-space: nowrap;
  }

  /* VERTICAL CONTENT */
  .banner-content {
    margin-top: 330px;
    padding-left: 50px;
     padding-bottom: 60px;
    max-width: 600px;
    color: #000000;
  }

  .banner-heading {
    font-size: 62px;
    font-weight: 600;
    margin-bottom: 20px;
  }

  .banner-description {
    font-size: 16px;
    margin-bottom: 30px;
    line-height: 1.6;
  }

  /* BUTTONS */
  .banner-button {
    display: inline-block;
    padding: 12px 28px;
    background-color: #ffffff;
    color: #000000;
    font-size: 14px;
    font-weight: 600;
    text-decoration: none;
    border: 1px solid #000000;
    transition: all 0.3s ease;
    white-space: nowrap;
  }

  .banner-button:hover {
    background-color: #000000;
    color: #ffffff;
  }

  .banner-button-secondary {
    margin-top: 10px;
  }

  .banner-bottom-text {
  margin-top: 100px; /* between 400â€“500px as requested */
  font-size: 14px;
  font-weight: 600;
  margin-left: 500px;
  letter-spacing: 2px;
  color: #000000;
  white-space: nowrap;
}

</style>


