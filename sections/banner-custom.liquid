<section
  class="banner-custom"
  style="background-image: url({{ section.settings.background_image | image_url }});"
>
  <!-- TOP HORIZONTAL CONTENT -->
  <div class="banner-top">
    <div class="banner-logo">
      {{ section.settings.logo_text }}
    </div>

    <div class="banner-subtitle">
      {{ section.settings.subtitle }}
    </div>

    <a href="#" class="banner-button-gift">
      {{ section.settings.choose_gift }} â†’
    </a>
  </div>

  <!-- VERTICAL CONTENT -->
  <div class="banner-content">
    <h1 class="banner-heading">
      {{ section.settings.heading }}
    </h1>

    <p class="banner-description">
      {{ section.settings.description }}
    </p>

    <a href="#" class="banner-button">
      {{ section.settings.button_text }} â†’
    </a>

      <!-- BOTTOM TEXT -->
  <p class="banner-bottom-text">
    {{ section.settings.bottom_text }}
  </p>

  </div>
</section>

<style>
  .banner-custom {
    width: 100%;
    height: calc(100vh - var(--header-height, 0px));
    background-size: cover;
    background-position: center top;
    background-repeat: no-repeat;

    display: flex;
    flex-direction: column;
    {% comment %} align-items: flex-start; {% endcomment %}
       justify-content: space-between; /* ðŸ”¥ key line */

  }

  /* TOP BAR */
  .banner-top {
    display: flex;
    align-items: center;

    padding: 8px 50px;
    color: #000000;
  }

  .banner-logo {
    font-size: 20px;
    font-weight: 600;
    letter-spacing: 0px;
    white-space: nowrap;
  }

  .banner-subtitle {
    margin-left: auto;
    margin-right: auto;
    font-size: 14px;
    opacity: 0.9;
    white-space: nowrap;
  }



  /* VERTICAL CONTENT */
  .banner-content {
    margin-left:0px;
    padding-left:60px;
    margin-top: 380px;
     padding-bottom: 60px;
    max-width: 550px;
    color: #000000;
  }

  .banner-heading {
    font-size: 62px;
    font-weight: 600;
    margin-bottom: 20px;
  }

  .banner-description {
    font-size: 16px;
    margin-bottom: 30px;
    line-height: 1.6;
  }

    /* BUTTONS */
  .banner-button-gift {
    display: inline-block;
    padding: 10px 46px;
    background-color:rgb(250, 234, 5);
    color: #000000;
    font-size: 14px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
    white-space: nowrap;
  }

    .banner-button-gift:hover {
    background-color: #000000;
    color: #ffffff;
  }
  
  .banner-button {
    display: inline-block;
    padding: 10px 46px;
    background-color:rgb(250, 234, 5);
    color: #000000;
    font-size: 14px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
    white-space: nowrap;
  }

  .banner-button:hover {
    background-color: #000000;
    color: #ffffff;
  }

  .banner-button-secondary {
    margin-top: 10px;
  }

  .banner-bottom-text {
  margin-top: 100px; /* between 400â€“500px as requested */
  font-size: 14px;
  font-weight: 600;
  margin-left: auto;
  letter-spacing: 2px;
  color: #000000;
  white-space: nowrap;
}

</style>


{% schema %}
{
  "name": "Custom Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background image"
    },
    {
      "type": "text",
      "id": "logo_text",
      "label": "Logo text",
      "default": "TISSO VISION"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Find the ideal gift for your loved ones"
    },

        {
      "type": "text",
      "id": "choose_gift",
      "label": "Gift",
      "default": "Choose Gift"
    },

    {
      "type": "text",
      "id": "heading",
      "label": "Banner heading",
      "default": "The Gift Guide"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Banner description",
  "default": "Discover thoughtful gifts designed to celebrate every special moment. Carefully curated collections that blend style, quality, and meaningâ€”perfect for surprising your loved ones and making memories that last."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "Choose Gift"
    },

    {
  "type": "text",
  "id": "bottom_text",
  "label": "Bottom Text",
  "default": "SUSTAINABLE, ETHICALLY MADE"
}

  ],
  "presets": [
    {
      "name": "Custom Full Banner"
    }
  ]
}
{% endschema %}























