<section
  class="banner-custom"
  style="background-image: url({{ section.settings.background_image | image_url }});"
>
  <!-- TOP BAR -->
  <div class="banner-top">
    <div class="banner-logo">{{ section.settings.logo_text }}</div>
    <div class="banner-subtitle">{{ section.settings.subtitle }}</div>
    <a href="#" class="banner-top-button">CHOOSE GIFT â†’</a>
  </div>

  <!-- MAIN CONTENT -->
  <div class="banner-inner">
    <h1 class="banner-heading">{{ section.settings.heading }}</h1>
    <p class="banner-description">{{ section.settings.description }}</p>
    <a href="#" class="banner-button">{{ section.settings.button_text }}</a>
  </div>

  <!-- BOTTOM TEXT -->
  <div class="banner-bottom">{{ section.settings.bottom_text }}</div>
</section>

<style>
.banner-custom {
  width: 100%;
  min-height: 80vh;
  background-size: cover;
  background-position: center;
  padding: 40px 60px;
  position: relative;
}

/* ===== TOP BAR ===== */
.banner-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.banner-logo {
  font-size: 14px;
  font-weight: 700;
  letter-spacing: 2px;
}

.banner-subtitle {
  font-size: 14px;
  opacity: 0.9;
}

.banner-top-button {
  background: #fff200;
  padding: 10px 20px;
  font-weight: 600;
  text-decoration: none;
  color: #000;
}

/* ===== MAIN CONTENT ===== */
.banner-inner {
  max-width: 520px;
  margin-top: 180px; /* moves content down cleanly */
}

.banner-heading {
  font-size: 62px;
  font-weight: 600;
  margin-bottom: 20px;
}

.banner-description {
  font-size: 16px;
  margin-bottom: 30px;
}

.banner-button {
  display: inline-block;
  padding: 14px 32px;
  background-color: #000;
  color: #fff;
  font-weight: 600;
  text-decoration: none;
}

/* ===== BOTTOM TEXT ===== */
.banner-bottom {
  position: absolute;
  bottom: 30px;
  left: 50%;
  transform: translateX(-50%);
  font-size: 12px;
  letter-spacing: 2px;
}
</style>