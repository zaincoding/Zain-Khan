<section class="banner-custom">
  <!-- TOP HORIZONTAL CONTENT -->

  <div class="desktop-banner">

  <div class="banner-top">
    <div class="banner-logo">
      {{ section.settings.logo_text }}
    </div>

    <div class="banner-subtitle">
      {{ section.settings.subtitle }}
    </div>

    <a href="#" class="banner-button-gift">
      {{ section.settings.choose_gift }} â†’
    </a>
  </div>

  <!-- VERTICAL CONTENT -->
  <div class="banner-content">
    <h1 class="banner-heading">
      {{ section.settings.heading }}
    </h1>

    <p class="banner-description">
      {{ section.settings.description }}
    </p>

    <a href="#" class="banner-button">
      {{ section.settings.button_text }} â†’
    </a>

      <!-- BOTTOM TEXT -->
  <p class="banner-bottom-text">
    {{ section.settings.bottom_text }}
  </p>

  </div>
</div>
</section>

<!-- MOBILE VERSION -->
<div class="mobile-banner">

  <div class="mobile-text">
    <div class="banner-logo">
      {{ section.settings.logo_text }}
    </div>

    <h1 class="banner-heading">
      {{ section.settings.heading }}
    </h1>

    
    <div class="banner-subtitle">
      {{ section.settings.subtitle }}
    </div>
  </div>

  <div class="mobile-image">

    <div class="mobile-button-wrapper">
    <a href="#" class="mobile-button">
      {{ section.settings.mobile_button}}->
    </a>
    </div>


  </div>

</div>

<style>
  .banner-custom {

    background-image: url({{ section.settings.background_image | image_url }});
    width: 100%;
    height: 100vh;
    min-height: 700px;
    max-height: 900px;
    background-size: cover;
    background-position: center top;
    background-repeat: no-repeat;

    display: flex;
    flex-direction: column;
    {% comment %} align-items: flex-start; {% endcomment %}
       justify-content: space-between; /* ðŸ”¥ key line */

  }

  .desktop-banner{
  
  }

  /* TOP BAR */
  .banner-top {
    display: flex;
    align-items: center;

    padding: 8px 50px;
    color: #000000;
  }

  .banner-logo {
    font-size: 20px;
    font-weight: 600;
    letter-spacing: 0px;
    white-space: nowrap;
  }

  .banner-subtitle {
    margin-left: auto;
    margin-right: auto;
    font-size: 14px;
    opacity: 0.9;
    white-space: nowrap;
  }



  /* VERTICAL CONTENT */
  .banner-content {
    margin-left:0px;
    padding-left:60px;
    margin-top: 390px;
     padding-bottom: 60px;
    max-width: 550px;
    color: #000000;
  }

  .banner-heading {
    font-size: 62px;
    font-weight: 600;
    margin-bottom: 20px;
  }

  .banner-description {
    font-size: 16px;
    margin-bottom: 30px;
    line-height: 1.6;
  }

    /* BUTTONS */
  .banner-button-gift {
    display: inline-block;
    padding: 10px 46px;
    background-color:rgb(250, 234, 5);
    color: #000000;
    font-size: 14px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
    white-space: nowrap;
  }

    .banner-button-gift:hover {
    background-color: #000000;
    color: #ffffff;
  }
  
  .banner-button {
    display: inline-block;
    padding: 10px 46px;
    background-color:rgb(250, 234, 5);
    color: #000000;
    font-size: 14px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
    white-space: nowrap;
  }

  .banner-button:hover {
    background-color: #000000;
    color: #ffffff;
  }



  .banner-bottom-text {
  margin-top: 100px; /* between 400â€“500px as requested */
  font-size: 14px;
  font-weight: 600;
  margin-left: auto;
  letter-spacing: 2px;
  color: #000000;
  white-space: nowrap;
}



/* TABLET (769px â€“ 1024px) */
@media (max-width: 1024px) and (min-width: 769px) {

  .banner-custom {
    height: auto;
    min-height: 600px;
    padding-bottom: 60px;
  }

  .banner-content {
    margin-top: 200px; /* reduce large gap */
    padding-left: 40px;
    max-width: 450px;
    margin-top:350px;
  }

  .banner-heading {
    font-size: 42px;
    margin-top:350px;

  }

  .banner-description {
    font-size: 15px;
  }

}




/* MOBILE */

/* Hide mobile by default */
.mobile-banner {
  display: none;
}

@media (max-width: 768px) {

  /* Hide desktop */
  .desktop-banner {
    display: none !important;
  }

  /* Show mobile */
  .mobile-banner {
    display: block !important;
  }

  .mobile-text {
    text-align: center;
    padding: 40px 20px 30px 20px;
  }

  .mobile-text .banner-heading {
    font-size: 26px;
    margin: 10px 0;
  }

  /* Mobile image below text */
.mobile-image {
  width: 100%;
  height: 250px; /* visible area (only top part shown) */
  overflow: hidden; /* hide bottom part */
  position: relative;
}

.mobile-image::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 400px; /* full image height */
  background-image: url({{ section.settings.background_image | image_url }});
  background-size: cover;
  background-position: top center; /* show top part */
}


.mobile-button-wrapper {
  text-align: center;
  margin-top: 20px;
}

.mobile-button {
  position:relative;
  display: inline-block;
  padding: 10px 46px;
  background-color: rgb(12, 12, 12);
  color:rgb(245, 243, 243);
  font-size: 14px;
  font-weight: 600;
  margin-top:160px;
  text-decoration: none;
  transition: all 0.3s ease;
}

.mobile-button:hover {
  background-color:rgb(248, 212, 9);
  color:rgb(20, 20, 20);
}


    .mobile-button:hover {
    background-color:rgb(247, 230, 5);
    color:rgb(10, 10, 10);
  }

  /* Remove desktop background */
  .banner-custom {
    background-image: none !important;
    height: auto;
    min-height: auto;
    max-height: none;
  }
}






</style>


