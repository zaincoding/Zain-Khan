<section class="grid-custom">
  <div class="grid-wrapper">

    {% for block in section.blocks %}
      {% assign product = all_products[block.settings.product] %}

      {% if product != blank %}
        

        <div class="grid-item">

  <div class="image-wrapper">
    <img 
      src="{{ product.featured_image | image_url: width: 600 }}" 
      alt="{{ product.title | escape }}" 
      width="400" 
      height="320" 
      class="grid-image">


<button 
  type="button" 
  class="plus-btn"
  data-product='{
    "title": "{{ product.title | escape }}",
    "price": {{ product.price | divided_by: 100 }},
    "description": "{{ product.description | strip_newlines | escape }}",
    "variants": {{ product.variants | json }},
    "options": {{ product.options | json }},
    "image": "{{ product.featured_image | image_url: width: 600 }}"
  }'
  style="
    {% if block.settings.button_top != 0 %} top: {{ block.settings.button_top }}px; {% endif %}
    {% if block.settings.button_bottom != 0 %} bottom: {{ block.settings.button_bottom }}px; {% endif %}
    left: {{ block.settings.button_left }}px;
    right: {{ block.settings.button_right }}px;
  ">
  +
</button>

  </div>


  <h3 class="grid-title">
    {{ product.title }}
  </h3>

</div>



      {% endif %}

    {% endfor %}

  </div>
</section>



<!-- GLOBAL POPUP -->
<div id="product-popup" class="popup hidden">
  <div class="popup-overlay"></div>

  <div class="popup-card">
    <button id="close-popup" class="popup-close">×</button>

    <div class="popup-inner">

      <!-- Left: Product Image -->
      <div class="popup-left">
        <img 
          id="popup-image"
          src="{{ product.featured_image | image_url: width: 600 }}"
          alt="Product Image"
          width="600"
          height="400"
          class="popup-product-image">
      </div>

      <!-- Right: Product Info -->
      <div class="popup-right">

        <h2 id="popup-title" class="popup-title"></h2>

        <p id="popup-price" class="popup-price"></p>

        <div id="popup-description" class="popup-description"></div>

      </div>
      

    </div>

        <div id="variant-selectors" class="popup-variants"></div>

        <button class="popup-add-to-cart">
          ADD TO CART →
        </button>y

  </div>
</div>



<style>
  .grid-custom {
    padding: 80px 60px;
  }

  .grid-wrapper {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 30px;
  }

  .grid-item {
    text-align: center;
  }

  .grid-image {
    width: 100%;
    height: 320px;
    object-fit: cover;
    border-radius: 8px;
    background-color: #f2f2f2;
  }

  .grid-title {
    margin-top: 15px;
    font-size: 18px;
    font-weight: 600;
  }


  /* + Button CSS*/

  .image-wrapper {
  position: relative;
}

.plus-btn {
  position: absolute;
  width: 40px;
  height: 40px;
  border-radius: 50%;
  border: none;
  background: white;
  color: black;
  font-size: 22px;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
}




/* Overlay */
.popup {
  position: fixed;
  inset: 0;
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
}

.popup.hidden {
  display: none;
}

.popup-overlay {
  position: absolute;
  inset: 0;
  background: rgba(0,0,0,0.5);
}

/* Card */
.popup-card {
  position: relative;
  background: #fff;
  width: 600px;
  max-width: 30%;
  padding: 10px;
  z-index: 2;
  box-shadow: 0 10px 40px rgba(0,0,0,0.2);
}

.popup-close {
  position: absolute;
  top: 1px;
  right: 20px;
  border: none;
  background: none;
  font-size: 22px;
  cursor: pointer;
}

/* Layout */
.popup-inner {
  display: flex;
  gap: 40px;
}

.popup-left {
  flex: 1;
}

.popup-product-image {
  width: 100%;
  height: auto;
  object-fit: cover;
}

.popup-right {
  flex: 1;
  display: flex;
  flex-direction: column;
}

/* Typography */
.popup-title {
  font-size: 20px;
  font-weight: 600;
  margin-bottom: 10px;
}

.popup-price {
  font-size: 18px;
  font-weight: 500;
  margin-bottom: 15px;
}

.popup-description {
  font-size: 14px;
  color: #666;
  margin-bottom: 20px;
}

/* Variants */
.popup-variants label {
  font-size: 13px;
  display: block;
  margin-bottom: 5px;
  margin-top: 15px;
}

.popup-variants select {
  width: 100%;
  padding: 10px;
  border: 1px solid #ddd;
}

/* Add to cart */
.popup-add-to-cart {
  margin-top: 25px;
  padding: 14px;
  background: #000;
  color: #fff;
  border: none;
  cursor: pointer;
  font-weight: 600;
  letter-spacing: 1px;
  transition: 0.3s;
}

.popup-add-to-cart:hover {
  background: #333;
}





  /* Tablet */
  @media (max-width: 1024px) {
    .grid-wrapper {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  /* Mobile */
  @media (max-width: 768px) {
    .grid-wrapper {
      grid-template-columns: 1fr;
    }
  }
</style>


<script>
document.addEventListener("DOMContentLoaded", function() {

  const plusButtons = document.querySelectorAll(".plus-btn");
  const popup = document.getElementById("product-popup");
  const closeBtn = document.getElementById("close-popup");

  const popupImage = document.getElementById("popup-image");
  const popupTitle = document.getElementById("popup-title");
  const popupPrice = document.getElementById("popup-price");
  const popupDescription = document.getElementById("popup-description");
  const variantContainer = document.getElementById("variant-selectors");

  plusButtons.forEach(button => {
    button.addEventListener("click", function() {

      const productData = JSON.parse(this.dataset.product);



// Set popup image
      popupImage.src = productData.image;      // <-- sets image
      popupImage.alt = productData.title;      // <-- sets alt


      // Title
      popupTitle.textContent = productData.title;

      // Simple Price (no Shopify.formatMoney)
      popupPrice.textContent = (productData.price / 100).toFixed(2);

      // Description (safe version)
      popupDescription.innerHTML = productData.description;

    //

      // Clear old variants
      variantContainer.innerHTML = "";

      // Only build selectors if real variants exist
      if (productData.options.length > 0 && productData.variants.length > 1) {

        productData.options.forEach((option, index) => {

          const label = document.createElement("label");
          label.textContent = option;

          const select = document.createElement("select");

         select.id = `option-${index}`;
         label.setAttribute("for", `option-${index}`)

          const usedValues = [];

          productData.variants.forEach(variant => {
            const value = variant.options[index];

            if (!usedValues.includes(value)) {
              usedValues.push(value);

              const opt = document.createElement("option");
              opt.value = value;
              opt.textContent = value;
              select.appendChild(opt);
            }
          });

          variantContainer.appendChild(label);
          variantContainer.appendChild(select);

        });
      }

      // Show popup
      popup.classList.remove("hidden");

    });
  });

  closeBtn.addEventListener("click", function() {
    popup.classList.add("hidden");
  });

  popup.addEventListener("click", function(e) {
    if (e.target === popup) {
      popup.classList.add("hidden");
    }
  });

});
</script>






