<section class="grid-custom">
  <div class="grid-wrapper">

    {% for block in section.blocks %}
      {% assign product = all_products[block.settings.product] %}

      {% if product != blank %}
        

        <div class="grid-item">

  <div class="image-wrapper">
    <img 
      src="{{ product.featured_image | image_url: width: 600 }}" 
      alt="{{ product.title | escape }}" 
      width="400" 
      height="320" 
      class="grid-image">


<button 
  type="button" 
  class="plus-btn"
  data-product='{
    "title": "{{ product.title | escape }}",
    "price": {{ product.price | divided_by: 100 }},
    "description": "{{ product.description | strip_newlines | escape }}",
    "variants": {{ product.variants | json }},
    "options": {{ product.options | json }},
    "image": "{{ product.featured_image | image_url: width: 600 }}"
  }'
  style="
    {% if block.settings.button_top != 0 %} top: {{ block.settings.button_top }}px; {% endif %}
    {% if block.settings.button_bottom != 0 %} bottom: {{ block.settings.button_bottom }}px; {% endif %}
    left: {{ block.settings.button_left }}px;
    right: {{ block.settings.button_right }}px;
  ">
  +
</button>

  </div>


  <h3 class="grid-title">
    {{ product.title }}
  </h3>

</div>



      {% endif %}

    {% endfor %}

  </div>
</section>

<!-- GLOBAL POPUP (ONLY ONE) -->
<div id="product-popup" class="popup hidden">
  <div class="popup-content">
    <button id="close-popup" class="close-btn">Ã—</button>
    <div class="popup-body">


     <img id="popup-image" src="" alt="Product Image" width="600" height="400" 
           style="width:100%; max-height:300px; object-fit:cover; margin-bottom:15px;">

            <h2 id="popup-title"></h2>
      <p id="popup-price"></p>
      <div id="popup-description"></div>

      <div id="variant-selectors"></div>
      <!-- Content will come in Phase 7 -->
    </div>
  </div>
</div>


<style>
  .grid-custom {
    padding: 80px 60px;
  }

  .grid-wrapper {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 30px;
  }

  .grid-item {
    text-align: center;
  }

  .grid-image {
    width: 100%;
    height: 320px;
    object-fit: cover;
    border-radius: 8px;
    background-color: #f2f2f2;
  }

  .grid-title {
    margin-top: 15px;
    font-size: 18px;
    font-weight: 600;
  }


  /* + Button CSS*/

  .image-wrapper {
  position: relative;
}

.plus-btn {
  position: absolute;
  width: 40px;
  height: 40px;
  border-radius: 50%;
  border: none;
  background: white;
  color: black;
  font-size: 22px;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
}


/*Pop Up */
.popup {
  position: fixed;
  inset: 0;
  background: rgba(0,0,0,0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;   /* ADD THIS */
}


.hidden {
  display: none;
}

.popup-content {
  background: white;
  width: 400px;
  padding: 30px;
  border-radius: 10px;
  position: relative;
}

.close-btn {
  position: absolute;
  top: 10px;
  right: 15px;
  background: none;
  border: none;
  font-size: 24px;
  cursor: pointer;
}





  /* Tablet */
  @media (max-width: 1024px) {
    .grid-wrapper {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  /* Mobile */
  @media (max-width: 768px) {
    .grid-wrapper {
      grid-template-columns: 1fr;
    }
  }
</style>


<script>
document.addEventListener("DOMContentLoaded", function() {

  const plusButtons = document.querySelectorAll(".plus-btn");
  const popup = document.getElementById("product-popup");
  const closeBtn = document.getElementById("close-popup");

  const popupImage = document.getElementById("popup-image");
  const popupTitle = document.getElementById("popup-title");
  const popupPrice = document.getElementById("popup-price");
  const popupDescription = document.getElementById("popup-description");
  const variantContainer = document.getElementById("variant-selectors");

  plusButtons.forEach(button => {
    button.addEventListener("click", function() {

      const productData = JSON.parse(this.dataset.product);



// Set popup image
      popupImage.src = productData.image;      // <-- sets image
      popupImage.alt = productData.title;      // <-- sets alt



       {% comment %} // Image
    if (productData.featured_image) {
      popupImage.src = productData.featured_image.src; // Shopify product JSON has featured_image.src
      popupImage.alt = productData.title;
    } else {
      popupImage.src = ''; // fallback if no image
      popupImage.alt = 'No image';
    } {% endcomment %}

      // Title
      popupTitle.textContent = productData.title;

      // Simple Price (no Shopify.formatMoney)
      popupPrice.textContent = (productData.price / 100).toFixed(2);

      // Description (safe version)
      popupDescription.innerHTML = productData.description;

      // Clear old variants
      variantContainer.innerHTML = "";

      // Only build selectors if real variants exist
      if (productData.options.length > 0 && productData.variants.length > 1) {

        productData.options.forEach((option, index) => {

          const label = document.createElement("label");
          label.textContent = option.name;

          const select = document.createElement("select");

          const usedValues = [];

          productData.variants.forEach(variant => {
            const value = variant.options[index];

            if (!usedValues.includes(value)) {
              usedValues.push(value);

              const opt = document.createElement("option");
              opt.value = value;
              opt.textContent = value;
              select.appendChild(opt);
            }
          });

          variantContainer.appendChild(label);
          variantContainer.appendChild(select);

        });
      }

      // Show popup
      popup.classList.remove("hidden");

    });
  });

  closeBtn.addEventListener("click", function() {
    popup.classList.add("hidden");
  });

  popup.addEventListener("click", function(e) {
    if (e.target === popup) {
      popup.classList.add("hidden");
    }
  });

});
</script>






