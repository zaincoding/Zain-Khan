<section class="grid-custom">
  <div class="grid-wrapper">

    {% for block in section.blocks %}
      {% assign product = block.settings.product %}

      {% if product != blank %}
        

        <div class="grid-item">

  <div class="image-wrapper">
    <img 
      src="{{ product.featured_image | image_url: width: 600 }}" 
      alt="{{ product.title | escape }}" 
      width="400" 
      height="320" 
      class="grid-image">

    <button 
      type="button" 
      class="plus-btn"
      data-product-id="{{ product.id }}">
      +
    </button>
  </div>

  <h3 class="grid-title">
    {{ product.title }}
  </h3>

</div>



      {% endif %}

    {% endfor %}

  </div>
</section>

<style>
  .grid-custom {
    padding: 80px 60px;
  }

  .grid-wrapper {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 30px;
  }

  .grid-item {
    text-align: center;
  }

  .grid-image {
    width: 100%;
    height: 320px;
    object-fit: cover;
    border-radius: 8px;
    background-color: #f2f2f2;
  }

  .grid-title {
    margin-top: 15px;
    font-size: 18px;
    font-weight: 600;
  }


  /* + Button CSS*/

  .image-wrapper {
  position: relative;
}

.plus-btn {
  position: absolute;
  bottom: 150px;
  right: 15px;
  width: 40px;
  height: 40px;
  border-radius: 50%;
  border: none;
  background: white;
  color: black;
  font-size: 22px;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
}


  /* Tablet */
  @media (max-width: 1024px) {
    .grid-wrapper {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  /* Mobile */
  @media (max-width: 768px) {
    .grid-wrapper {
      grid-template-columns: 1fr;
    }
  }
</style>

{% schema %}
{
  "name": "Custom Grid",
  "settings": [],
"blocks": [
  {
    "type": "grid_block",
    "name": "Grid Product",
    "settings": [
      {
        "type": "product",
        "id": "product",
        "label": "Select Product"
      },
      {
        "type": "range",
        "id": "button_top",
        "label": "Button Top",
        "min": 0,
        "max": 500,
        "step": 5,
        "unit": "px",
        "default": 0
      },
      {
        "type": "range",
        "id": "button_bottom",
        "label": "Button Bottom",
        "min": 0,
        "max": 500,
        "step": 5,
        "unit": "px",
        "default": 0
      },
      {
        "type": "range",
        "id": "button_left",
        "label": "Button Left",
        "min": 0,
        "max": 500,
        "step": 5,
        "unit": "px",
        "default": 15
      },
      {
        "type": "range",
        "id": "button_right",
        "label": "Button Right",
        "min": 0,
        "max": 500,
        "step": 5,
        "unit": "px",
        "default": 15
      }
    ]
  }
]
,
  "presets": [
    {
      "name": "Custom Grid",
      "blocks": [
        { "type": "grid_block" },
        { "type": "grid_block" },
        { "type": "grid_block" },
        { "type": "grid_block" },
        { "type": "grid_block" },
        { "type": "grid_block" }
      ]
    }
  ]
}
{% endschema %}









